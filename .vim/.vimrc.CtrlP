" CtrlP
"let g:ctrlp_map = '<c-p>'
"let g:ctrlp_cmd = 'CtrlP'
let g:ctrlp_working_path_mode = 'ra'
let g:ctrlp_custom_ignore = '\v[\/]\.(git|svn|jpg|png|gif|bmp)$'

function! DefaultOpenInTab(action, line)
		if a:action == 'e' 
				call call('ctrlp#acceptfile', ['t', a:line])
    else
				call call('ctrlp#acceptfile', [a:action, a:line])
    endif
endfunction

let g:ctrlp_open_func = { 'files': 'DefaultOpenInTab', 'buffers': 'DefaultOpenInTab', 'mru files': 'DefaultOpenInTab' }
